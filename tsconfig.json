{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2017", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}